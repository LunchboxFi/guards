{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "lib",
        "declaration": true,
		/* Bundler mode */

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"ts-node": {
		"esm": true
	},
}